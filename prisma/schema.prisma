generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Creature {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  tier      String?
  name      String
  respawn   Float
  map       String?
  spriteUrl String
  lastDeath DateTime
  updateAt  DateTime @updatedAt
}

model Instancia {
  id        String             @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  spriteUrl String
  last      DateTime
  membros   MembrosInstancia[] @relation(fields: [], references: [])
}

model MembrosInstancia {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  role        String
  instanciaId String?  @db.ObjectId
  instancia   Instancia? @relation(fields: [instanciaId], references: [id])
}